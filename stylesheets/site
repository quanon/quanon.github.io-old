  margin-top: 20px;
  margin-bottom: 20px;
  border-radius: 10px; }

.tabs__tab {
  border: solid 1px #FFF !important; }

.tabs__tab {
  border: solid 1px #FFF !important; }
  .tabs__tab:link, .tabs__tab:visited {
    color: #FFF; }
  .tabs__tab:hover {
    color: #563D7C; }

.tabs__tab__name {
  font-size: 120%; }

.favorite__item,
.selection__item,
.motto__item,
.tool__item {
  margin: 15px 0;
  padding: 10px;
  border: solid 1px #FFF;
  border-radius: 10px; }
  .favorite__item:hover,
  .selection__item:hover,
  .motto__item:hover,
  .tool__item:hover {
    box-shadow: 0px 0px 20px #FFF; }

.tool__item a:link, .tool__item a:hover, .tool__item a:visited {
  color: #FFF;
  text-decoration: none; }

.favorite__item__heading,
.selection__item__heading,
