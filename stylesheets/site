.tool__item__heading {
  font-size: 150%;
  margin-bottom: 5px; }

.favorite__item__content,
.selection__item__content,
.motto__item__content,
.tool__item__content {
  font-size: 120%;
  margin-bottom: 10px; }
  .favorite__item__content ul,
  .selection__item__content ul,
  .motto__item__content ul,
  .tool__item__content ul {
    margin-bottom: 0; }

.motto__item__content__saying {
  font-size: 120%; }

